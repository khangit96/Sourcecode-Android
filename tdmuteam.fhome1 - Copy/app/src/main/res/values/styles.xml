<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#3498db</item>
        <item name="colorPrimaryDark">#3498db</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Style NoActionBar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--AppBarOverlay-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Style Float Action Button Add-->
    <style name="FabAdd" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="FabAddReview" parent="AppTheme">
        <item name="colorAccent">#FF4081</item>
    </style>
    <!--Style Float Action Button Add-->
    <style name="FabDirection" parent="AppTheme">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="FabDirection1" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <!--Cluster text Style-->
    <style name="clusterTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--Icon text style-->
    <style name="iconTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TextViewAbout">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff404040</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8.0dip</item>
        <item name="android:paddingBottom">9.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">27.0dip</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="TextViewAboutContent">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff404040</item>
        <item name="android:gravity">right</item>
        <item name="android:padding">9.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">30.0dip</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

</resources>
