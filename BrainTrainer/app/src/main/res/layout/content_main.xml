<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6b9b9"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="25dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#8f8881"
        android:padding="10dp"
        android:text="30s"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvTimer"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#8f8881"
        android:padding="10dp"
        android:text="0/0"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView

        android:id="@+id/tvSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/tvTimer"
        android:layout_centerHorizontal="true"
        android:background="#8f8881"
        android:padding="15dp"
        android:text="30+12"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TableLayout
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSum"
        android:layout_marginTop="20dp"
        android:stretchColumns="*">

        <TableRow>

            <Button
                android:id="@+id/bt0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#9b755b"
                android:onClick="chooseAnswer"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="20dp"
                android:tag="0"
                android:text="9"
                android:textColor="#fcf3f3"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8a9f8b"
                android:onClick="chooseAnswer"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="20dp"
                android:tag="1"
                android:text="5"
                android:textColor="#fcf3f3"
                android:textSize="30sp" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/bt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#9b789d"
                android:onClick="chooseAnswer"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="20dp"
                android:tag="2"
                android:text="13"
                android:textColor="#fcf3f3"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#36878a"
                android:onClick="chooseAnswer"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="20dp"
                android:tag="3"
                android:text="20"
                android:textColor="#fcf3f3"
                android:textSize="30sp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:textSize="40sp"
        android:layout_marginTop="30dp"
        android:id="@+id/tvGameOver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tb"
        android:layout_centerInParent="true"
        android:text="Game Over!"
        android:textColorHighlight="#8f8881" />
    <Button
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/tvGameOver"
        android:onClick="newGame"
        android:text="New Game"
        android:id="@+id/btNewGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
