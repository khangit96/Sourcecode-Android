<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.smartgardening.Fragment.TongQuanFragment">


    <GridView
        android:id="@+id/grid_view"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="20dp"
        android:columnWidth="50dp"
        android:gravity="center"
        android:numColumns="1"
        android:padding="10dp"></GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabLed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/fab_margin"
            android:tint="@android:color/darker_gray"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_led" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabWatering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/fab_margin"
            android:layout_marginTop="50dp"
            android:tint="@android:color/darker_gray"
            app:srcCompat="@drawable/ic_watering" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabPush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/fab_margin"
            android:layout_marginTop="20dp"
            android:tint="@android:color/darker_gray"
            app:srcCompat="@drawable/ic_push_button" />

    </LinearLayout>

</FrameLayout>
